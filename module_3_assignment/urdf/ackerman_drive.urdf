<?xml version="1.0"?>
<robot name="ackerman_robot">

  <!-- Base Link -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="1.2 0.5 0.2" />
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>

    <collision>
      <geometry>
        <box size="1.0 0.5 0.2" />
      </geometry>
    </collision>

    <inertial>
      <mass value="10.0"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.5" ixy="0" ixz="0" iyy="0.5" iyz="0" izz="0.5"/>
    </inertial>
  </link>

   <!-- Steering Mechanism -->
 <link name="steering_link">
  <visual>
    <geometry>
      <box size="0.1 0.2 0.1" />
    </geometry>
    <material name="gray">
      <color rgba="0.5 0.5 0.5 1"/>
    </material>
  </visual>
  <collision>
    <geometry>
      <box size="0.1 0.5 0.1" />
    </geometry>
  </collision>
  <inertial>
    <mass value="1.0"/>
    <origin xyz="0 0 0"/>
    <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
  </inertial>
</link>

<joint name="base_to_steering" type="revolute">
  <origin xyz="-0.5 0 0"/>
  <parent link="base_link"/>
  <child link="steering_link"/>
  <axis xyz="0 0 1"/>
  <limit effort="10.0" lower="-0.385" upper="0.385" velocity="1.0"/>
</joint>

  <!--Rear wheels -->
 <link name="rear_left_wheel">
    <visual>
      <geometry>
        <cylinder length="0.1" radius="0.15"/>
      </geometry>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.1" radius="0.1"/>
      </geometry>
    </collision>
  </link>

  <joint name="wheel_left_joint" type="continuous">
    <origin xyz="0.3 0.4 0.0" rpy="1.57 0.0 0.0"/>
    <parent link="base_link"/>
    <child link="rear_left_wheel"/>
    <axis xyz="0.0 0.0 1.0"/>
  </joint>

  <link name="rear_right_wheel">
    <visual>
      <geometry>
        <cylinder length="0.1" radius="0.15"/>
      </geometry>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.1" radius="0.1"/>
      </geometry>
    </collision>
  </link>

  <joint name="wheel_right_joint" type="continuous">
    <origin xyz="0.3 -0.4 0.0" rpy="1.57 0.0 0.0"/>
    <parent link="base_link"/>
    <child link="rear_right_wheel"/>
    <axis xyz="0.0 0.0 1.0"/>

  </joint>
<!-- Front wheel -->
<link name="front_left_wheel">
  <visual>
    <geometry>
      <cylinder length="0.1" radius="0.15"/>
    </geometry>
    <material name="black">
      <color rgba="0 0 0 1"/>
    </material>
  </visual>
  <collision>
    <geometry>
      <cylinder length="0.1" radius="0.15"/>
    </geometry>
  </collision>
</link>

<joint name="base_to_front_left_wheel" type="revolute">
  <parent link="steering_link"/>
  <child link="front_left_wheel"/>
  <origin xyz="-0 0.4 0" rpy = "1.57 0.0 0.0 "/>
  <axis xyz="0.0  0.0  1.0 "/>  <!-- Adjusted axis to be parallel to Z-axis -->
  <limit effort="10.0" lower="-3.145" upper="3.145" velocity="1.0"/>
</joint>

<link name="front_right_wheel">
  <visual>
    <geometry>
      <cylinder length="0.1" radius="0.15"/>
    </geometry>
    <material name="black">
      <color rgba="0 0 0 1"/>
    </material>
  </visual>
  <collision>
    <geometry>
      <cylinder length="0.1" radius="0.15"/>
    </geometry>
  </collision>
</link>

<joint name="base_to_front_right_wheel" type="revolute">
  <parent link="steering_link"/>
  <child link="front_right_wheel"/>
  <origin xyz="0 -0.4 0" rpy = "1.57 0.0 0.0 "/>
  <axis xyz="0 0 1"/>  <!-- Adjusted axis to be parallel to Z-axis -->
  <limit effort="10.0" lower="-3.145" upper="3.145" velocity="1.0"/>
</joint>

</robot>
